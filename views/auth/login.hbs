<div class="bg">
  
<form action="/auth/login" method="POST" id="form-container" class="form-signin">
<h2>Entre na sua conta</h2>
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">

  <br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">

  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
<button class="btn btn-lg btn-primary logo">Login</button> 
 
  <div class="d-flex log">
    <p class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
  <a href="/auth/facebook" class="btn btn-md btn-primary fb-login-button">Log In with Facebook</a>
  
  
  </div>
</form>

</div>


